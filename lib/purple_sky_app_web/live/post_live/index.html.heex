<.header class="py-4 bg-white border-b border-gray-200 dark:bg-slate-800 dark:border-slate-600">
  <div class="max-w-2xl px-4 mx-auto">
    <div class="flex items-center justify-between">
      <h1 class="text-xl font-bold text-gray-900 dark:text-white">Timeline</h1>
    </div>
  </div>
  <:actions>
    <.link patch={~p"/posts/new"}>
      <.button class="px-4 py-[15px] bg-purple-500 rounded-full hover:bg-purple-600">
        <.icon name="hero-pencil-square" class="w-6 h-6 font-extrabold text-white" />
      </.button>
    </.link>
  </:actions>
</.header>

<div class="max-w-2xl px-4 py-6 mx-auto">
  <div phx-update="stream" id="posts" class="space-y-4">
    <%= for {dom_id, post} <- @streams.posts do %>
      <.live_component module={PurpleSkyAppWeb.PostLive.PostComponent} id={dom_id} post={post} />
    <% end %>
  </div>
</div>

<.modal :if={@live_action in [:new, :edit]} id="post-modal" show on_cancel={JS.patch(~p"/posts")}>
  <.live_component
    module={PurpleSkyAppWeb.PostLive.FormComponent}
    id={@post.id || :new}
    title={@page_title}
    action={@live_action}
    post={@post}
    patch={~p"/posts"}
  />
</.modal>
